<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fillViewport="true">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/animeTitleDetail"
        android:text="TITULO ANIME"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearPopularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/animeTitleDetail"
        app:layout_constraintBottom_toTopOf="@id/animeImgDetail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusAnimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="rating"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/animeImgDetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/esferadbz"
        app:riv_corner_radius="15dp"
        app:layout_constraintTop_toBottomOf="@id/linearPopularity"
        app:layout_constraintBottom_toTopOf="@id/linearID"/>

    <LinearLayout
        android:id="@+id/linearID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:orientation="horizontal"
        tools:ignore="DuplicateIds,MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/animeImgDetail"
        app:layout_constraintBottom_toTopOf="@id/layoutRating">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="ID"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idAnimeDatails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="id"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Airing"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/airingAnimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Airing"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/layoutRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/linearID"
        app:layout_constraintBottom_toTopOf="@id/layoutPopularity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Rating"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ratingAnimeDatails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="rating"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutPopularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:orientation="horizontal"
        tools:ignore="DuplicateIds,MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/layoutRating"
        app:layout_constraintBottom_toTopOf="@id/layoutYear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Popularity"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popularityAnimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="popularity"
            android:textColor="@color/black"
            android:textSize="13sp" />



    </LinearLayout>

      <LinearLayout
          android:id="@+id/layoutYear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="20dp"
          android:gravity="left"
          android:orientation="horizontal"
          tools:ignore="DuplicateIds,MissingConstraints"
          app:layout_constraintTop_toBottomOf="@id/layoutPopularity"
          app:layout_constraintBottom_toTopOf="@id/titleSynopis">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginBottom="5dp"
              android:text="Year"
              android:textColor="@color/black"
              android:textSize="13sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/yearAnimeDatails"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginBottom="5dp"
              android:text="year"
              android:textColor="@color/black"
              android:textSize="13sp" />



      </LinearLayout>

      <TextView
          android:id="@+id/titleSynopis"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:paddingStart="80dp"
          android:paddingTop="10dp"
          android:paddingEnd="80dp"
          android:paddingBottom="10dp"
          android:text="Synopsis"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="14sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toTopOf="@id/synopsisAnimeDetails"
          app:layout_constraintTop_toBottomOf="@id/layoutYear" />

      <TextView
        android:id="@+id/synopsisAnimeDetails"
        android:text="Synopsis"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/titleSynopis"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
