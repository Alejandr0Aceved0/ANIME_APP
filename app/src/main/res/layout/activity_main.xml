<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/navSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryHint="Buscar titulo"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/reciclerView1"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/navSearch"
            android:paddingTop="20dp"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="25sp"
        android:text="  AGREGADO  \n  RECIENTEMENTE"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/reciclerView1"
        app:layout_constraintBottom_toTopOf="@id/animeList">

    </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/animeList"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@+id/banner" />


</androidx.constraintlayout.widget.ConstraintLayout>